{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    "config:semverAllWeekly"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardApproval": true,
  "lockFileMaintenance": {
    "enabled": true,
    "dependencyDashboardCategory": "\uD83D\uDD04 Maintenance"
  },
  "packageRules": [
    {
      "matchCategories": [
        "cd",
        "ci"
      ],
      "dependencyDashboardCategory": "â¬†\uFE0F Continuous Integration & Continuous Deployment"
    },
    {
      "matchDepTypes": [
        "tool.uv.dev-dependencies",
        "tool.uv.sources"
      ],
      "dependencyDashboardCategory": "\uD83D\uDEE0\uFE0F Development Dependencies"
    },
    {
      "matchUpdateTypes": "major",
      "dependencyDashboardCategory": "\uD83D\uDC94 Major Updates"
    }
  ],
  "separateMinorPatch": true
}
